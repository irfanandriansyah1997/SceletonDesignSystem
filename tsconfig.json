{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "outDir": "build",
        "lib": ["es6", "es7", "dom"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "storybook/*": ["./component/*"],
            "storybook-atom/*": ["./component/atoms/*"],
            "storybook-template/*": ["./component/templates/*"]
        }
    },
    "exclude": ["build", "node_modules"]
}
